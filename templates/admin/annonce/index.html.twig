{% extends 'base.html.twig' %}

{% block title %}Hello AnnonceController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<table>
			<tr>
				<td>Titre</td>
				<td>Description</td>
				<td>Price</td>
				<td>Vendu</td>
				<td>Status</td>Edition<td></td>
			</tr>
			{% for annonce in annonces %}
				<tr>
					<td>{{annonce.title}}</td>
					<td>{{annonce.description}}</td>
					<td>{{annonce.price}}</td>
					{% if annonce.isSold == false %}
						<p>A vendre</p>
					{% else %}
						<p>Vendu</p>
					{% endif %}
					<p>{{annonce.status}}</p>
					<small>{{annonce.createdAt|date('Y/m/d')}}</small>

				{% endfor %}
			</table>
		</div>
	{% endblock %}
